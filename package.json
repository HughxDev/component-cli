{
  "name": "@hughx/component-cli",
  "version": "0.1.0",
  "description": "Perform CRUD operations on components. Framework-agnostic.",
  "main": "component-cli.js",
  "types": "component-cli.d.ts",
  "bin": {
    "component": "component-cli.js"
  },
  "repository": "git@github.com:HughxDev/component-cli.git",
  "author": "Hugh Guiney",
  "license": "BlueOak-1.0.0",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "replace-in-file": "^6.2.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@hughx/tsconfig": "^0.0.11",
    "@types/mkdirp": "^1.0.2",
    "@types/ncp": "^2.0.5",
    "@types/node": "^16.4.0",
    "@types/rimraf": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-hughx": "^0.0.13",
    "eslint-config-hughx-ts": "^0.0.11",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "npm-minify": "^0.0.5",
    "prettier": "^2.3.2",
    "prettier-eslint-cli": "^5.0.1",
    "ts-node": "^10.1.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "compile": "tsc --declaration component-cli.ts",
    "component": "ts-node component-cli.ts",
    "clean:build": "rm *.js; rm *.d.ts; rm methods/*.js; rm methods/*.d.ts",
    "clean:cmp": "rm -rf src/components/*",
    "clean": "yarn clean:cmp && yarn clean:build",
    "build": "yarn compile && npm-minify && yarn clean:build",
    "build:patch": "yarn compile && yarn version --patch && npm-minify && yarn clean:build",
    "build:minor": "yarn compile && yarn version --minor && npm-minify && yarn clean:build",
    "build:major": "yarn compile && yarn version --major && npm-minify && yarn clean:build"
  }
}
